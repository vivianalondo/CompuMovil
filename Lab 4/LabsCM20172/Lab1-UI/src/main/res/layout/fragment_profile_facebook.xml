<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFacebookFragment"
    android:gravity="center"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:weightSum="1">


    <ScrollView
        android:id="@+id/scrollViewProfileF"
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_weight="0.35">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/viewProfileF"
                android:layout_width="200dp"
                android:layout_height="142dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/ic_profile"/>

            <TextView
                android:id="@+id/viewNameF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/viewEmailF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:textSize="15dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/log_out"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:id="@+id/btnlog_outF" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/revoke"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btnrevokeF"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
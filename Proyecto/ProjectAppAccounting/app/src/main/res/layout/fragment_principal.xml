
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalFragment"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:weightSum="1"
    android:background="@color/colorWhite">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_layout">

        <TextView
            android:id="@+id/saldotxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:text="@string/saldo"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textSignoPesos"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="$COP"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="0.44" />

            <TextView
                android:id="@+id/saldovalor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/colorOscuro"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="0.35" />

            </LinearLayout>

        <TextView
            android:id="@+id/linea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="__________________________"
            android:textColor="@color/colorOscuro"
            android:textSize="25dp" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_layout"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/textIngresos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_add_circle_black_24dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Total de ingresos registrados"
            android:textColor="@color/colorGreyOsc"
            android:textSize="18dp"
            android:layout_weight="0.44" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.13"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textSignoPesosI"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="$COP"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="0.44" />


            <TextView
                android:id="@+id/ingresosresult"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_weight="0.35" />
        </LinearLayout>

        <TextView
            android:id="@+id/textGastos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_minus"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Total de gastos registrados"
            android:textColor="@color/colorGreyOsc"
            android:textSize="18dp"
            android:layout_weight="0.44" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.13"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textSignoPesosG"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="$COP"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="0.44" />

            <TextView
                android:id="@+id/gastosresult"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_weight="0.35" />
        </LinearLayout>

        <TextView
            android:id="@+id/textPresupuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"

            android:drawableLeft="@drawable/ic_sunny"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Presupuesto total registrado"
            android:textColor="@color/colorGreyOsc"
            android:textSize="18dp"
            android:layout_weight="0.44" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.13"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textSignoPesosP"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="$COP"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="0.44" />

            <TextView
                android:id="@+id/á¹•resupuestoresult"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="right"
                android:singleLine="true"
                android:text="00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_weight="0.35" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

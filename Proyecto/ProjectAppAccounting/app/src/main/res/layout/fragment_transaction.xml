<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PrincipalFragment"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:weightSum="1"
    android:background="@color/colorGrey"
    android:id="@+id/transaction_layout">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/imageTransaction"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/textNameT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text="Pago servicios"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_weight="0.44"/>

                        <TextView
                            android:id="@+id/textDescriptionT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text="Pago servicios"
                            android:textColor="@color/colorGreyOsc"
                            android:textSize="14dp"
                            android:layout_weight="0.44"/>

                        <TextView
                            android:id="@+id/textFechaT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:singleLine="true"
                            android:text="10/10/10"
                            android:textColor="@color/colorGreyOsc"
                            android:textSize="14dp"
                            android:layout_weight="0.44"/>
                        </LinearLayout>


                    <TextView
                        android:id="@+id/ingresosresult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="$1,000.000.00"
                        android:textColor="@color/colorGreen"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="0.64" />
                </LinearLayout>

</LinearLayout>
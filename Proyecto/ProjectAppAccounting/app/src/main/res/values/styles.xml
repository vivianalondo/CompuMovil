<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00695c</item>
        <!-- Light Indigo -->
        <item name="colorPrimaryDark">#004d40</item>
        <!-- Dark Indigo -->
        <item name="colorAccent">#009688</item>
        <!-- Blue -->
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Etiquetas">
        <item name="android:background">@drawable/background_label_fab</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Etiquetas2">
        <item name="android:background">@color/colorGreen</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CustomTabWidgetText">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
